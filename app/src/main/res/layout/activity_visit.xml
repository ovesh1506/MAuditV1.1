<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">
            <TextView
                android:text="Site Code : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/vp_siteCode"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/vp_codeShow"
                android:layout_weight="1"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:text="Site Name : "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/vp_siteName"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/vp_NameShow"
                android:layout_weight="1"
                android:maxLines="2"
                android:textSize="20sp"/>
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/vp_Reason"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"

            android:addStatesFromChildren="true"
            android:background="@drawable/edittextselector"
            >

        </Spinner>

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Select Date"
            android:layout_marginBottom="10dp"
            android:background="#D3D3D3"
            android:paddingLeft="15dp"

            android:drawablePadding="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:addStatesFromChildren="true"
            android:visibility="gone"></TextView>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/vp_optionalReson"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:addStatesFromChildren="true"
            android:background="@drawable/edittextselector"
            >

        </Spinner>
        <EditText
            android:id="@+id/vp_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Amount"
            android:lines="4"
            android:padding="7dp"
            android:gravity="top|left"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:textColor="@color/text_color"
            android:background="@drawable/edittextselector"
            />

        <EditText
            android:id="@+id/vp_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Remarks"
            android:lines="4"
            android:padding="7dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ01234556789, "
            android:singleLine="false"
            android:gravity="top|left"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/edittextselector"
            />

        <Button
            android:id="@+id/vp_btnImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:text="Capture Photo"
            android:background="#f9a825"
            android:textColor="#fff8dc"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vp_Image"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/vp_btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#f9a825"
            android:textColor="#fff8dc"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            ></Button>


    </LinearLayout>
</ScrollView>
